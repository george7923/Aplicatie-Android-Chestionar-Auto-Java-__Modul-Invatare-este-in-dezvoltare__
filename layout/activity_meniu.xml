<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Meniu">

    <!-- Label-ul mare -->
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bine aÈ›i venit username la AUTOEXPERT!"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:gravity="center"/>

    <!-- Butonul MOD EXAMEN -->
    <Button
        android:id="@+id/buttonModExamen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOD EXAMEN"
        app:layout_constraintTop_toBottomOf="@+id/welcomeMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <!-- Butonul MOD INVATARE -->
    <Button
        android:id="@+id/buttonModInvatare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOD INVATARE"
        app:layout_constraintTop_toBottomOf="@+id/buttonModExamen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Butonul pentru Highscore -->
    <Button
        android:id="@+id/buttonHighscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIGHSCORE"
        app:layout_constraintTop_toBottomOf="@+id/buttonModInvatare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
